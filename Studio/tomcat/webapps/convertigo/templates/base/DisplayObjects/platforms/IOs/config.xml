<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="$(ApplicationID)$" version="$(ApplicationVersion)$">
	<!-- Find configuration details for this file here : http://docs.build.phonegap.com/en_US/3.3.0/ -->
    
	<!-- Available template variables, replaced before build by Convertigo -->	
	<!-- $(ApplicationID)$ : the unique identifier for your application. To support all supported platforms, this *must* be reverse-domain name style (e.g. 'com.yourcompany.yourapp') -->
	<!-- $(ApplicationVersion)$ : for best results, use a major/minor/patch style version, with three numbers, such as '0.0.1'-->
	<!-- $(ApplicationName)$ : the name of the application -->
	<!-- $(ApplicationDescription)$ : a description for your application -->
	<!-- $(ApplicationAuthorName)$ : your name -->
	<!-- $(ApplicationAuthorEmail)$ : your email -->
	<!-- $(ApplicationAuthorWebsite)$ : your website -->
	<!-- $(PlatformName)$ : current platform name -->
	<!-- $(PlatformType)$ : current platform's target os -->
    
	<!-- This name is also the application name on your device -->
	<name>$(ApplicationName)$</name>

	<description>$(ApplicationDescription)$</description>

	<!-- This parameter defines the application's version number in app store -->
	<gap:config-file platform="ios" parent="CFBundleShortVersionString">
    	<string>$(ApplicationVersion)$</string>
	</gap:config-file>
	
	<author href="$(ApplicationAuthorWebsite)$" email="$(ApplicationAuthorEmail)$">$(ApplicationAuthorName)$</author>
	 
	<gap:platform name="ios"/>
	
	<!-- Customize your app and platform with the preference element. -->
    <preference name="phonegap-version"           value="3.5.0" />          <!-- all: current version of PhoneGap -->
    <preference name="orientation"                value="default" />        <!-- all: default means both landscape and portrait are enabled -->
    <preference name="target-device"              value="universal" />      <!-- all: possible values handset, tablet, or universal -->
    <preference name="fullscreen"                 value="true" />           <!-- all: hides the status bar at the top of the screen -->
    <preference name="SplashScreen"    			  value="splash" />         <!-- all: the splash screen resource if built without phonegap build -->
    <preference name="AutoHideSplashScreen"       value="false" />          <!-- ios: set to false, the splash screen must be hidden using a JavaScript API (navigator.splashscreen API)  -->
    <preference name="prerendered-icon"           value="true" />           <!-- ios: if icon is prerendered, iOS will not apply it's gloss to the app's icon on the user's home screen -->
    <preference name="ios-statusbarstyle"         value="black-opaque" />   <!-- ios: black-translucent will appear black because the PhoneGap webview doesn't go beneath the status bar -->
    <preference name="detect-data-types"          value="true" />           <!-- ios: controls whether data types (such as phone no. and dates) are automatically turned into links by the system -->
    <preference name="exit-on-suspend"            value="false" />          <!-- ios: if set to true, app will terminate when home button is pressed -->
    
    <!-- To avoid app scrolling -->
<!--    <preference name="DisallowOverscroll" value="true" /> -->
<!-- 	<preference name="webviewbounce" value="false" /> -->

	<!-- Mandatory preferences for FlashUpdate service -->
	<preference name="iosPersistentFileLocation" value="Library" />

	<icon src="icon.png"/>
	
	<!-- IOs icons -->
    <icon src="res/icon/icon57.png"         gap:platform="ios"	width="57"		height="57" 	/> 	<!-- iPhone -->
    <icon src="res/icon/icon72.png"         gap:platform="ios"	width="72"		height="72" 	/>	<!-- iPad -->
    <icon src="res/icon/icon572x.png"       gap:platform="ios"	width="114"		height="114" 	/>	<!-- iPhone 4 Retina Display -->
    <icon src="res/icon/icon722x.png"       gap:platform="ios"	width="144"		height="144" 	/>	<!-- iPad 3 Retina Display -->
   
	<gap:splash src="splash.png" />
	
	<!-- IOs splash -->
    <gap:splash src="res/splash/Default568h2xiphone.png"		gap:platform="ios"     width="640" height="1136" 	/>	<!-- iPhone -->
    <gap:splash src="res/splash/DefaultLandscape2xipad.png"		gap:platform="ios"     width="2048" height="1496" 	/>	<!-- iPad -->
    <gap:splash src="res/splash/DefaultLandscapeipad.png"		gap:platform="ios"     width="1024" height="748" 	/>	<!-- iPad -->
    <gap:splash src="res/splash/DefaultPortrait2xipad.png"		gap:platform="ios"     width="1536" height="2008" 	/>	<!-- iPad -->
    <gap:splash src="res/splash/DefaultPortraitipad.png"		gap:platform="ios"     width="768" height="1004" 	/>	<!-- iPad -->
    <gap:splash src="res/splash/Default2xiphone.png"			gap:platform="ios"     width="640" height="960" 	/>	<!-- iPhone -->
    <gap:splash src="res/splash/Defaultiphone.png"				gap:platform="ios"     width="320" height="480" 	/>	<!-- iPhone -->
	
	<!-- If you do not want any permissions to be added to your app, add the
    following tag to your config.xml; you will still have the INTERNET
    permission on your app, which PhoneGap requires. -->
	<preference name="permissions" value="none"/>
	
    <!-- Core plugins mandatory for FlashUpdate service -->
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    
	<!-- Useful for debugging -->
	<gap:plugin name="org.apache.cordova.console" />
	
	<!-- Status bar plugin for iOS 7 -->
	<gap:plugin name="com.phonegap.plugin.statusbar" />
	
	<!-- Status bar plugin use -->	
	<gap:config-file platform="ios" parent="UIStatusBarHidden">
	    <false/>
	</gap:config-file>
	
	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
	    <true/>
	</gap:config-file>
    
	<!-- Other optional Core plugins, comment them out (ctrl+shit+c) if you want to reduce the package size and permissions -->
<!--     <gap:plugin name="org.apache.cordova.battery-status" /> -->
<!--     <gap:plugin name="org.apache.cordova.camera" /> -->
<!--     <gap:plugin name="org.apache.cordova.media-capture" /> -->
<!--     <gap:plugin name="org.apache.cordova.contacts" /> -->
<!--     <gap:plugin name="org.apache.cordova.device-motion" /> -->
<!--     <gap:plugin name="org.apache.cordova.device-orientation" /> -->
<!--     <gap:plugin name="org.apache.cordova.dialogs" /> -->
<!--     <gap:plugin name="org.apache.cordova.geolocation" /> -->
<!--     <gap:plugin name="org.apache.cordova.globalization" /> -->
<!--     <gap:plugin name="org.apache.cordova.inappbrowser" /> -->
<!--     <gap:plugin name="org.apache.cordova.media" /> -->
<!--     <gap:plugin name="org.apache.cordova.network-information" /> -->
<!--     <gap:plugin name="org.apache.cordova.vibration" /> -->

    <!-- Other optional plugins -->
<!--     <gap:plugin name="com.phonegap.plugins.pushplugin" /> -->
<!--     <gap:plugin name="com.phonegap.plugins.barcodescanner" /> -->
	
	<!-- Other plugins and documentation can be find here : https://build.phonegap.com/plugins -->
	
	<!-- Expose access to all URIs, including the file and http protocols -->
	<access origin="https://*" subdomains="true"/>
	<access origin="*" subdomains="true"/>
</widget>
